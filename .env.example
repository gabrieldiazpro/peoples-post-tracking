# ==========================================
# ROUTZ - Environment Configuration
# Copy this file to .env and fill in your values
# ==========================================

# ==========================================
# SERVER
# ==========================================
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ==========================================
# DATABASE (PostgreSQL)
# ==========================================
DATABASE_URL=postgresql://routz:routz_password@localhost:5432/routz_db

# Individual connection params (alternative to DATABASE_URL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=routz_db
# DB_USER=routz
# DB_PASSWORD=routz_password

# ==========================================
# CACHE (Redis)
# ==========================================
REDIS_URL=redis://localhost:6379

# ==========================================
# EMAIL - Choose one provider
# ==========================================

# Option 1: SendGrid
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxx

# Option 2: Resend
# RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxx

# Option 3: Custom SMTP
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASS=your-smtp-password
# SMTP_SECURE=false

# Default sender
EMAIL_FROM_NAME=Routz
EMAIL_FROM_ADDRESS=noreply@routz.io

# ==========================================
# SMS (Twilio) - Optional
# ==========================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_FROM_NUMBER=+33xxxxxxxxx

# ==========================================
# PAYMENTS (Stripe) - For paid returns
# ==========================================
# STRIPE_SECRET_KEY=your_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
# STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ==========================================
# MAPS (for service point picker)
# ==========================================
MAPBOX_TOKEN=pk.xxxxxxxxxxxxxxxxxxxxxxxx

# Alternative: Google Maps
# GOOGLE_MAPS_API_KEY=AIzaxxxxxxxxxxxxxxxxxxxxxxxx

# ==========================================
# CARRIER API CREDENTIALS
# ==========================================

# Colissimo
COLISSIMO_CONTRACT_NUMBER=
COLISSIMO_PASSWORD=
COLISSIMO_ACCOUNT_NUMBER=

# Chronopost
CHRONOPOST_ACCOUNT=
CHRONOPOST_PASSWORD=
CHRONOPOST_SUBACCOUNT=

# Mondial Relay
MONDIAL_RELAY_MERCHANT_ID=
MONDIAL_RELAY_KEY=

# DHL
DHL_API_KEY=
DHL_API_SECRET=

# UPS
UPS_CLIENT_ID=
UPS_CLIENT_SECRET=
UPS_ACCOUNT_NUMBER=

# ==========================================
# SECURITY
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# API Keys for external integrations
API_KEY_SALT=random-salt-for-api-keys

# ==========================================
# FILE STORAGE (for return photos)
# ==========================================

# Option 1: AWS S3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=eu-west-3
# S3_BUCKET=routz-uploads

# Option 2: Cloudflare R2
# R2_ACCESS_KEY_ID=
# R2_SECRET_ACCESS_KEY=
# R2_BUCKET=routz-uploads
# R2_ENDPOINT=https://xxx.r2.cloudflarestorage.com

# ==========================================
# LOGGING & MONITORING
# ==========================================
LOG_LEVEL=info

# Sentry (error tracking)
# SENTRY_DSN=https://xxx@sentry.io/xxx

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_WHATSAPP_NOTIFICATIONS=false
ENABLE_PAID_RETURNS=true
ENABLE_SERVICE_POINTS=true
